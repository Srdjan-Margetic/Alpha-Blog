<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error_message', obj: @article %>            
        <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-info rounded" ) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">  
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>  
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Descrtiption of Article" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "col-3 btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>

    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-info text-center" %>
  </div>
</div>

